<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_parent"
    tools:context="com.unique.dalian.voicephoto.EditActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/edit_iv_cancel"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="#ff0000" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/edit_iv_save"
        android:layout_alignTop="@id/edit_iv_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="#00ff00" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_iv_photo"
        android:layout_below="@id/edit_iv_save"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    
    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/edit_back"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:text="home"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/edit_modify"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="edit"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/edit_share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="share"/>


</RelativeLayout>
