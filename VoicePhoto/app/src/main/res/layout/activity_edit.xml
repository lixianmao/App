<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/edit_parent"
    tools:context="com.unique.dalian.voicephoto.EditActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/edit_iv_cancel"
        android:layout_marginLeft="30dp"
        android:background="#ff0000"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/edit_iv_save"
        android:layout_alignTop="@id/edit_iv_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="#00ff00"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_iv_photo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_iv_cancel"
        android:layout_marginTop="40dp" />

</RelativeLayout>
