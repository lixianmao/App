<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <RelativeLayout
        android:id="@+id/item_new_store_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <TextView
            android:id="@+id/store_tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/new_list"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/store_tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:text="@string/finish"
            android:textColor="#423521"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:id="@+id/store_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_new_store_rl"
        android:background="#000000" />

    <EditText
        android:id="@+id/store_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/store_divider"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:gravity="top"
        android:hint="@string/new_list"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>